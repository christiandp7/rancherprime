
{% if settings.display_popup_newsletter %}
<div class="newsletterwrapper" data-newsletter id="email-modal">
  <div class="modal-overlay">
    <div class="window-content">
       {% if settings.pop_up_newsletter_img_show %}
      <div class="column-right medium-down--hide">
         <img src="{{ 'popup_newsletter_img.jpg' | asset_url }}" alt="{{ settings.popup_newsletter_title }}";> 
          </div>
      {% endif %}
      <div class="column-left">
        <div class="window-box">
      <div class="newsletter-title border-title">
        <h4 class="title">{{ settings.popup_newsletter_title }}</h4>
      </div>
      <p class="message h6">{{ settings.popup_newsletter_message }}</p>
      <div id="mailchimp-email-subscibe">
        <div id="mc_embed_signup">
          {% include 'newsletter-form' %}
        </div>   
        <input id="dismiss" type="checkbox" name="dismiss">
        <label for="dismiss">
          <span>{{ settings.form_note }}</span>
          {% include 'social-links' %}
        </label>
          </div>
      </div>   
    </div> 
      <a class="close btn close-window" title="{{ 'general.password_page.close' | t }}">
        {% include 'icon-close' %}
      </a>
    </div>
  </div>
</div>
{% endif %}

