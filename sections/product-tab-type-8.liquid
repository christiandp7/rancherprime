<div data-section-id="{{ section.id }}"  data-section-type="product-tab-type-8" class="product-tab-type-8" >     
  {{ 'swiper.js' | asset_url | script_tag }}
  {{ 'swiper.css' | asset_url | stylesheet_tag }}
  <div class="container">

    <div class="full_width_tab">    
      <div class="grid-uniform">          

        <div class="grid__item">      
          <div class="dt-sc-tabs-container-section"> 
            {% if section.settings.heading != blank or section.settings.description != blank   %}  
            <div class="section-header section-header--small">
              <div class="border-title"> 

                <h2 style="color:{{ section.settings.heading_color }};">{{ section.settings.heading }}</h2>
                {% if section.settings.title_img != blank %}
                <div class="tilte_img">
                  <img src="{{ section.settings.title_img | img_url: '167x' }}" alt="" title=""  />
                </div>
                {% endif %}



                {% if section.settings.description != blank  %}  
                <div class="short-desc">  <p style="color:{{ section.settings.description_color }};">{{ section.settings.description }}</p></div>
                {% endif %} 
                
                
                
              </div>
            </div>
            {% endif %} 

            {% if section.blocks.size > 0 %} 
            <div class="dt-sc-tabs-container"> 
              <ul class="dt-sc-tabs wow fadeInUp animated">         
                {% for block in section.blocks %} 
                {% if block.settings.title != blank %}
                <li><a href="#" class="tabs-{{ block.id }}">{{ block.settings.title }} </a></li>           
                {% endif %}
                {% endfor %}
              </ul>
              {% for block in section.blocks %}
              {%- assign collection = collections[block.settings.collection] -%}               
              <div class="dt-sc-tabs-content" style="padding:0;background:{{ section.settings.bg_color }};"> 

                <div class="swiper-container {{ block.settings.title | handleize }}"> 

                  <ul class="tab2  swiper-wrapper {{ block.id }}">
                    {% for product in collection.products %}
                    {% include 'home-product-grid-item' , grid_item_width: " " %}  
                    {% else %}
                    {% for i in (1..8) %}
                    <li class="grid__item wide--one-quarter post-large--one-quarter large--one-third medium--one-half small-grid__item item-row  on-sale" id="product-{{ i }}">
                      <div class="products">
                        <div class="product-container">
                          <a href="#" class="grid-link"> 
                            {% if forloop.index == 3 %}
                            <div class="featured-tag">
                              <span class="badge badge--sale">
                                <i class="fa fa-star"></i>
                                <span class="gift-tag badge__text{% if sale_text.size > 7 %} badge__text--small{% endif %}">{{ 'products.product.sale' | t }}</span>
                              </span>
                            </div>{% endif %}

                            <div class="reveal"> 
                              {% capture current %}{% cycle 1, 2, 3, 4, 5, 6 %}{% endcapture %}
                              {{ 'product-' | append: current | placeholder_svg_tag: 'placeholder-svg' }} 
                            </div>
                          </a>
                          <div class="ImageWrapper">
                            <div class="product-button">
                              <div class="button-row-1">
                                <a href="#" class="quick-view-text"> 
                                  <i class="zmdi zmdi-eye"></i>
                                </a>
                                <a href="{{ product.url }}">                      
                                  <i class="zmdi zmdi-link"></i>
                                </a>  
                              </div>
                              <div class="button-row-2">
                                <form action="#" method="post" class="variants clearfix" id="cart-form-6529189125">
                                  <input type="hidden" name="id" value="21661289093">
                                  <a href="#" class="add-cart-btn"><i class="zmdi zmdi-shopping-cart"></i> </a>
                                </form>
                                <a href="/account/login" class="wishlist"><i class="zmdi zmdi-favorite-outline"></i></a> 

                              </div>
                            </div>
                          </div>
                        </div>
                        <div class="product-detail"> 
                          <a href="#" class="grid-link__title">Sample title {{ i }}</a>

                          <div class="grid-link__meta">
                            <div class="product_price"> <span class="money" data-currency-usd="$320.00">$0.00</span> </div>
                            <del class="grid-link__sale_price"><span class="money" data-currency-usd="$756.00">$0.00</span></del> </div>
                          <span class="spr-badge" id="spr_badge_6529189125" data-rating="0.0"> 
                            <span class="spr-starrating spr-badge-starrating"><i class="spr-icon spr-icon-star-empty" style="color: #f05315;"></i><i class="spr-icon spr-icon-star-empty" style="color: #f05315;"></i><i class="spr-icon spr-icon-star-empty" style="color: #f05315;"></i><i class="spr-icon spr-icon-star-empty" style="color: #f05315;"></i><i class="spr-icon spr-icon-star-empty" style="color: #f05315;"></i></span> <span class="spr-badge-caption"> </span> </span>

                        </div>
                      </div>
                    </li>
                    {% endfor %} 
                    {% endfor %}
                  </ul>
                  <div class="swiper-button">
                    <div class="swiper-button-prev {{ block.settings.title | handleize }} btn"><i class="fas fa-long-arrow-alt-left"></i>prev</div>
                    <div class="swiper-button-next  {{ block.settings.title | handleize }} btn">next<i class="fas fa-long-arrow-alt-right"></i></div>
                  </div>

                </div>

              </div>
              <script type="text/javascript">                   
                var swiper = new Swiper('.swiper-container.{{ block.settings.title | handleize }}', {
                                        slidesPerView: 4,
                                        slidesPerColumn: 2,                                    
                                        pagination: {
                                        el: '.swiper-pagination',
                                        clickable: true,
                                        },
                                        navigation: {
                                        nextEl: '.swiper-button-next.{{ block.settings.title | handleize }}',
                                        prevEl: '.swiper-button-prev.{{ block.settings.title | handleize }}',
                                        },

                                        breakpoints: {
                                        1024: {
                                        slidesPerView: 4,

                                        },
                                        768: {
                                        slidesPerView: 3,

                                        },
                                        640: {
                                        slidesPerView: 2,

                                        },
                                        320: {
                                        slidesPerView: 1,

                                        }
                                        },
                                        });            


              </script>
              {% endfor %}                
            </div><!--End tabs container-->
            {% endif %}
          </div>    
        </div>

      </div>
      {% for block in section.blocks %}
      <style>
        {% if section.settings.heading_image_need %} .product-tab-type-8 .border-title:after {  content:"";background-image:url({{ section.settings.heading_image | img_url: 'master' }});display:inline-block;background-repeat:no-repeat;background-position:center;width:57px;height:19px;} {% endif %}
        .product-tab-type-8 .full_width_tab ul.dt-sc-tabs  li a { color:{{ section.settings.tag_clr }};border:2px solid {{ section.settings.tag_clr }}; }
        .product-tab-type-8 .full_width_tab ul.dt-sc-tabs  li a.tabs-{{ block.id }}:hover {color:{{ section.settings.tag_hover_clr }};border:2px solid {{section.settings.tabactive_bg_clr}};background: {{section.settings.tabactive_bg_clr}};}

        .product-tab-type-8 .full_width_tab ul.dt-sc-tabs li a.current { color:{{ section.settings.tag_hover_clr }};border:2px solid {{section.settings.tabactive_bg_clr}};background: {{section.settings.tabactive_bg_clr}}; }
        .product-tab-type-8 .full_width_tab ul.dt-sc-tabs li a.current {color:{{ section.settings.tag_hover_clr }};border:2px solid {{section.settings.tabactive_bg_clr}};background: {{section.settings.tabactive_bg_clr}};}
      </style>
      {% endfor %}
    </div> 
  </div>
  <div class="dt-sc-hr-invisible-large"></div>
</div>

{% schema %}
{
"name": "Product Tab 2",
"class": "index-section",
"max_blocks": 4,
"settings": [
{
"type": "color",
"id": "bg_color",
"label": "Bg",
"default": "#fff"
}, 
{
"type": "text",
"id": "heading",
"label": "Heading"          
},
{
"type": "color",
