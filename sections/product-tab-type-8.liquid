"default":"#000"
},
{
"type": "image_picker",
"id": "title_img",
"label": "Title Image",
"info": "Size: 55x17"
},    

{
"type": "color",
"id": "tag_clr",
"label": "Tag Color",
"default": "#000"
},
{
"type": "color",
"id": "tag_hover_clr",
