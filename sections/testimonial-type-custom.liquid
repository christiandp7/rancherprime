    },
    {
      "type": "image_picker",
      "id": "silhouette",
      "label": "Silhouette"
    },
    {
      "type": "text",
      "id": "silhouette_bg-position",
      "label": "Silhouette bg position",
      "default": "left center",
      "info": "css property"
    },
    {
      "type": "text",
      "id": "silhouette_bg-size",
      "label": "Silhouette bg size",
      "default": "auto 80%",
      "info": "css property"
    }
  ],
  "blocks":[
    {
      "type":"text",
      "name":"Testimonial",
      "settings":[
        {
          "type":"text",
          "id":"test_title",
          "label":"Title"
        },
        {
          "type":"textarea",
          "id":"text_desc",
          "label":"Description"
        },
        {
          "type":"color",
          "id":"des_color",
          "label":"Description Color",
          "default":"#000"
        },
        {
          "type":"text",
          "id":"author_name",
          "label":"author name"
        },
        {
          "type":"text",
          "id":"author_designation",
          "label":"Designation"
        },
        {
          "type":"color",
          "id":"author_color",
          "label":"Author Color",
          "default":"#000"
        },
        {
          "type":"image_picker",
          "id":"avatar",
          "label":"Avatar Img",
          "info": "Size 400x600"
        }
      ]
    }
  ],
  "presets":[
    {
      "name":"Testimonial Custom",
      "category":"Text",
      "blocks":[
        {
          "type":"text"
        },
        {
          "type":"text"
        }
      ]
    }
  ]
}
{% endschema %}