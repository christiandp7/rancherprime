<div data-section-id="{{ section.id }}" data-section-type="testimonial-type-16" class="testimonial-type-16 testimonial-type-custom section--{{ section.id }}">
  {%- assign collection = collections[section.settings.collection] -%}
  <div class="grid-uniform silhouette">
    <div class="banner_image parallax"
      style="{% if section.settings.image_1 != blank %} background-image:url('{{ section.settings.image_1 | img_url: '1920X' }}');background-repeat:no-repeat;background-position:center;float:left;width:100%;{% else %}background-color:{{section.settings.background_color}}; {% endif%} ">
      <div class="banner_image">
        <div class="container">
          <div class="grid__item">
            <div class="testimonial-content wow fadeInUp animated">
              <div class="border-title">
                {% if section.settings.heading != blank %}
                <h5 class="small-title" style="color:{{ section.settings.heading_color }};">{{ section.settings.heading
                  }}</h5>
                {% endif %}
                {% if section.settings.title_1 != blank %}
                <h2 style="color:{{ section.settings.title_1_clr }};">{{ section.settings.title_1 }}</h2>
                {% endif %}
              </div>
              <div class="type-11__items-wrapper">


                <ul class="type11__items {{ section.id }}-loop owl-carousel owl-theme">
                  {% if section.blocks.size > 0 %}
                    {% for block in section.blocks %}
                    <li class="testimonial-detail">


                      <div class="testimonial-container">
                        {% if block.settings.avatar != blank %}
                        <div class="testimonial-img">
                          <img src="{{ block.settings.avatar | img_url: '400x' }}" />
                        </div>
                        {% else %}
                        <div class="testimonial-img">
                          <img src="//via.placeholder.com/400x600">
                        </div>
                        {% endif %}
                        
                        <div class="testimonial">
                          <div class="testimonial-inner">
                            {% if block.settings.test_title != blank %}
                            <p>{{ block.settings.test_title }}</p>
                            {% endif %}
                            {% if block.settings.text_desc != blank %}
                              <h5 style="color:{{block.settings.des_color }}">{{ block.settings.text_desc }}</h5>
                            {% endif %}
                            {% if block.settings.author_name != blank %}
                              <h6 class="author-name" style="color:{{block.settings.author_color }}">
                                <small>
                                  {{ block.settings.author_name }} 
                                  <span style="color:{{block.settings.author_descolor }}">
                                    {{ block.settings.author_designation }}
                                  </span>
                                </small>
                              </h6>
                            {% endif %}
                          </div>
                          <div class="testimonial-nav owl-nav--{{ section.id }}">
                          </div>
                          
                        </div>

                      </div>

                      {% comment %}
                      {% if block.settings.avatar != blank %}
                      <div class="test-img">
                        <img src="{{ block.settings.avatar | img_url: '75x75' }}" />
                      </div>
                      {% else %}
                      <div class="test-img">
                        <img src="//via.placeholder.com/75x75">
                      </div>
                      {% endif %}

                      {% if block.settings.text_desc != blank %}
                      <blockquote>
                        <q style="color:{{block.settings.des_color }}">{{ block.settings.text_desc }}</q>
                      </blockquote>
                      {% endif %}
                      {% if block.settings.author_name != blank %}
                      <div class="author-detail">
                        <div class="author">
                          <h6 class="author-name" style="color:{{block.settings.author_color }}">{{
                            block.settings.author_name }} <span style="color:{{block.settings.author_descolor }}">{{
                              block.settings.author_designation }}</span></h6>
                        </div>
                      </div>
                      {% endif %}
                      {% endcomment %}



                    </li>
                    {% endfor %}
                  {% endif %}
                </ul>



              </div>
              <script type="text/javascript">
                $(document).ready(function () {
                  var type8_products = $(".type11__items.{{ section.id }}-loop");
                  type8_products.owlCarousel({
                    loop: true,
                    margin: 10,
                    nav: true,
                    navText: ["<span class='fa fa-chevron-left'></span>","<span class='fa fa-chevron-right'></span>"],
                    // navElement: 'span',
                    navContainer: ".owl-nav--{{ section.id }}",                                        
                    dots: false,
                    smartSpeed: 1000,
                    navSpeed: 1000,
                    items: 1,
                    responsive: {
                      0: {
                        items: 1
                      },
                      600: {
                        items: 1
                      },
                      720: {
                        items: 1
                      }
                    }
                  });
                });
              </script>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="dt-sc-hr-invisible-large"></div>
</div>


<style>
  {% if section.settings.silhouette != blank %}
  .section--{{ section.id }} .silhouette { 
    background-image: url({{ section.settings.silhouette | img_url: 'large' }});
    background-size: {{ section.settings.silhouette_bg-size }};
    background-position: {{ section.settings.silhouette_bg-position }};
  }
  {% endif %}

  {% if section.settings.show_overlay_bg_clr %}
  .testimonial-type-16 .banner_image.parallax::before {
    background-color: {{ section.settings.overlay_background_color }};
  }
  {% endif %}

  
</style>





