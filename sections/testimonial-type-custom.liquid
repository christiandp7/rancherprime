      "label":"Line heading"
    },
    {
      "type":"color",
      "id":"heading_color",
      "label":"Line heading",
      "default":"#000"
    },
    {
      "type":"text",
      "id":"title_1",
      "label":"Title"
    },
    {
      "type":"color",
      "id":"title_1_clr",
      "label":"Title",
      "default":"#000"
    },
    {
      "type":"header",
