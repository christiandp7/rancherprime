




<div data-section-id="{{ section.id }}" data-section-type="wide-banner-type-6" class="wide-banner-type-6 wide-banner-article"> 
  <div class="grid-uniform CollectionItems">    
    <div class="wide-banner-type-1-bock"  style="{% if article.image != blank %}background-image:url('{{ article.image | img_url: '1920X' }}');background-attachment:fixed;background-repeat:no-repeat;background-position:center center; {% else %}background-color:{{section.settings.background_color}};{% endif%}"  >
      <div class="wrapper">
        
        
        {% comment %}
        <div class="grid__item wide--one-half post-large--one-half large--one-whole medium--one-whole small-grid__item">
        
        {% if section.settings.left_image != blank %}
         <div class="left-img">
            
            <img src="{{ section.settings.left_image | img_url: '1920x' }}" alt="" title="{{section.settings.left_title}}"  style=""/> 
            
          </div>
        {% endif %}
        
        </div>
        {% endcomment %}
        
        
         <div class="grid__item wide--one-half post-large--one-half large--one-whole medium--one-whole small-grid__item">
        <div class="wide-banner-type-1-content"> 
          
          <div class="grid__item wow fadeInDown animated">
          {% if section.settings.text_1 != blank %}
          <h5 class="small-title "  style="color:{{ section.settings.text_color }};">{{ section.settings.text_1 }}     </h5>   
          {% endif %}  
          {% if section.settings.title_1 != blank %}
          <h2 style="color:{{ section.settings.title_color }};">{{ section.settings.title_1 }} </h2>
          {% endif %}
          </div>
          
          <div class="deal-clock lof-clock-timer-detail fadeInUp animated"></div>
          {% assign dealTime = section.settings.deal_end_date | replace: '_',' ' %}  
          <div class="deal-content wow fadeInUp animated">
           
          
            <script>
              //<![CDATA[
              jQuery(document).ready(function($){
                $(".lof-clock-timer-detail").lofCountDown({      
                  TargetDate:"{{ dealTime }}",
                  DisplayFormat:"<ul class='list-inline'><li class='day fadeInUp animated'>%%D%%<span>Days</span></li><li class='hours'>%%H%%<span>Hours</span></li><li class='mins'>%%M%%<span>Minutes</span></li><li class='seconds'>%%S%%<span>Seconds</span></li></ul>",
                  FinishMessage: "Expired"
                });
              });
              //]]>
            </script>
            {% if section.settings.button_1 != blank %}
            <div class="deal-btn"> <a class="btn" href="{{ section.settings.link_1 }}">{{ section.settings.button_1 }}</a> </div>   
            {% endif %}         
          </div>  
        </div>
        </div>
        
        
        
        
        
      </div>
      </div>   
    </div>
    <style>

.wide-banner-type-6.wide-banner-article .wide-banner-type-1-bock::after {
  background-color:{{section.settings.background_color}};
}
      
      
      
        .wide-banner-type-6  .btn {border:1px solid {{section.settings.button_bg_clr}};color:{{section.settings.button_txt_clr}};}
        .wide-banner-type-6  .btn:hover {border:1px solid {{section.settings.button_hoverbg_clr}};background:{{section.settings.button_hoverbg_clr}};color:{{section.settings.button_hovertxt_clr}};}
        
      
      .wide-banner-type-6 .lof-clock-timer-detail ul li,.wide-banner-type-6 .lof-clock-timer-detail ul li span { color:{{ section.settings.time_color }}; }
      .wide-banner-type-6 .wide-banner-type-1-content .lof-clock-timer-detail li:after { background:{{ section.settings.time_color }}; }
      .wide-banner-type-6 .wide-banner-type-1-content .deal-clock.lof-clock-timer-detail li{border-bottom:1px solid {{section.settings.border_time_color}};background:{{section.settings.bg_time_color | color_modify: 'alpha', 0.07 }};}
      .wide-banner-type-6 .wide-banner-type-1-content .lof-clock-timer-detail li::before{border-bottom: 7px solid {{section.settings.border_time_color}};}
    </style>
  </div>





  {% schema %}
  {
    "name":"Wide Banner Article",
    "class":"index-section",
    "settings":[
      {
        "type":"color",
        "id":"background_color",
        "label":"Bckground color",
        "default":"#000"
      },
      {
        "type": "range",
        "id": "opacity_bg",
        "label": "Background opacity",
        "unit": "op",
        "min": 0.1,
        "max": 1,
        "step": 0.1,
        "default": 0.5
      },
      {
        "type":"text",
        "id":"title_1",
        "label":"Title"
      },
      {
        "type":"color",
        "id":"title_color",
        "label":"Title color",
        "default":"#000"
      },
      {
        "type":"text",
        "id":"text_1",
        "label":"Sub Heading"
      },
      {
        "type":"color",
        "id":"text_color",
        "label":"Sub Heading color",
        "default":"#000"
      },
      {
        "type":"color",
        "id":"time_color",
        "label":"Deal time color",
        "default":"#000"
      },
      {
        "type":"color",
        "id":"bg_time_color",
        "label":"Bg time color",
        "default":"#000"
      },
      {
        "type":"color",
        "id":"border_time_color",
        "label":"Border time color",
        "default":"#000"
      },
      {
        "type":"text",
        "id":"button_1",
        "label":"Button text"
      },
      {
        "type":"url",
        "id":"link_1",
        "label":"Link URL"
      },
      {
        "type":"text",
        "id":"deal_end_date",
        "label":"Deal end date",
        "info":"format should be MM/DD/YYYY_HH:MM:SS "
      },
      {
        "type":"color",
        "id":"button_bg_clr",
        "label":"Button Border Color",
        "default":"#fff"
      },
      {
        "type":"color",
        "id":"button_txt_clr",
        "label":"Button Text Color",
        "default":"#fff"
      },
      {
        "type":"color",
        "id":"button_hoverbg_clr",
        "label":"Button Hover Bg Color",
        "default":"#fff"
      },
      {
        "type":"color",
        "id":"button_hovertxt_clr",
        "label":"Button Hover Text Color",
        "default":"#fff"
      }
    ]
  }
  {% endschema %}


