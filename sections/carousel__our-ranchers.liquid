

<div class="carousel carousel-full carousel--{{ section.id }}">
  <div class="grid__item shortcodes-section">
      <!--dt-sc-toggle-frame-set starts-->
      <div class="carousel-container">
          <ul class="carousel-ul--{{ section.id }} owl-carousel owl-theme">
            {% for block in section.blocks %}
              <li>
                <img src="{{ block.settings.image | img_url: 'large' }}">
              </li>
            {% endfor %}  
          </ul>
    </div>     
      <!--dt-sc-toggle-frame-set ends-->

      <script type="text/javascript">       
        $(document).ready(function(){
          var type8_products = $(".carousel-ul--{{ section.id }}");
          type8_products.owlCarousel({
            loop:true,                                        
            nav:true,
            margin:0,
          // navContainer: ".wide-owl__nav.{{ section.id }}",
            navContainer: ".carousel-ul--{{ section.id }}",
            navText: ["<span class='fa fa-chevron-left'></span>","<span class='fa fa-chevron-right'></span>"],                                 
            dots: false,
            smartSpeed : 1000,
            autoplay: true,
            autoplayTimeout: 3000,
            navSpeed : 1000,
            mouseDrag: true,
            items:1   ,
            responsive:{
              0:{
                items:2
              },
              600:{
                items:3
              },
              720:{
                items:4
              },
              1100: {
                items: 4
              }
            }
          });     
        });
      </script>
  
</div>
</div>

{% if section.settings.carousel_margin_bottom %}
   <div class="dt-sc-hr-invisible-large"></div>
{% endif %}




{% schema %}
{
	"name": "Carousel Our Ranchers",
	"max_blocks": 15,
	"settings": [
    {
      "type": "checkbox",
      "id": "carousel_margin_bottom",
      "label": "Carousel margin bottom",
      "default": true
    }
  ],
	"blocks" : [
		{
			"type": "image",
			"name": "Image",
			"settings": [
				{
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "Please use the same dimensions for all images."
        }
			]
		}
	],
  "presets": [
    {
      "name": "Carousel",
      "category": "Image",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}
